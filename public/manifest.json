  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Acessar dashboard principal",
      "url": "/dashboard.html",
      "icons": [
        {
          "src": "/assets/images/icons/apk-icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Checkout",
      "short_name": "Checkout",
      "description": "Processar pagamentos",
      "url": "/checkout.html",
      "icons": [
        {
          "src": "/assets/images/icons/apk-icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Produtos",
      "short_name": "Produtos",
      "description": "Gerenciar produtos",
      "url": "/gestao-produtos.html",
      "icons": [
        {
          "src": "/assets/images/icons/apk-icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Integrações",
      "short_name": "Integrações",
      "description": "Configurar integrações",
      "url": "/integracoes.html",
      "icons": [
        {
          "src": "/assets/images/icons/apk-icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+ratixpay",
      "url": "/checkout.html?produto=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  }
}
